{
  "version": 2,
  "builds": [
    {
      "src": "package/**/*",
      "use": "@vercel/python",
      "config": { "runtime": "python-3.12" }
    }
  ],
  "routes": [
    {
      "src": "/vectorize",
      "dest": "/api/app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/app.py"
    }
  ]
}
